pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Pull code from GitHub
                git 'https://github.com/santhoshbabu0411/springbootdemo.git'
            }
        }
        stage('Install Maven and Build') {
            steps {
                // Check if Maven is already installed, if not, install it
                script {
                    def mvnHome = tool name: 'Maven', type: 'maven', return: true
                    if (!mvnHome) {
                        echo 'Maven is not installed, installing now...'
                        // Install Maven
                        mvnHome = tool 'Maven'
                    } else {
                        echo "Maven is already installed at: ${mvnHome}"
                    }
                }
                // Build with Maven
                script {
                    def mvnHome = tool 'Maven'
                    def mvnCmd = "${mvnHome}/bin/mvn"
                    sh "${mvnCmd} clean package" // Example Maven command
                }
            }
        }
    }
}

